<!DOCTYPE html>
<html>
  <head>
    <title>VOMPrayerWall</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div id="content">
       <%= render partial: "shared/navbar" %>
	   <h1>VOMPrayerWall</h1>
	   <% unless flash[:notice].blank? %>
	   <div class="alert alert-info"><%= notice %></div>
       <div class="alert alert-warning"><%= alert %></div>
	   <% end %>
	   
	   <%= yield %>
   </div>
   <ul id="navigation">
	   <li><%= link_to requests_path do%>
	   <%= icon('fas', 'book-open', class:"fa-3x btn")%>
	   <%end %>
	   
	   </li>
	   <li><%= link_to new_request_path do %>
	   <%= icon('fas', "sticky-note",class:"fa-3x btn")%>
	   <%end %>
	   
	   </li>
	   <li><%= link_to calendars_index_path do%>
	   <%= icon('fas', "calendar-alt",class:"fa-3x btn")%>
	   <%end%>
	   </li>
	   <li>
		   <%= render partial:"shared/profile" %>
	   </li>
	  
   </ul>
  </body>
</html>
